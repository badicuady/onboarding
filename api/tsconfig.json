{
  "compilerOptions": {
    "module": "CommonJs",
    "esModuleInterop": true,
    "target": "ES2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "typeRoots": ["@types"],
    "declarationMap": false,
	"allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "./src/@types/*"]
    }
  },
  "files": [
	"./node_modules/@types/node/index.d.ts"
  ],
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/**/*.spec.ts"]
}
